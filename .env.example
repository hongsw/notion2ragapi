# Notion API Configuration
NOTION_TOKEN=secret_xxx
NOTION_DB_ID=xxx  # Optional: specific database ID
NOTION_PAGE_ID=xxx  # Optional: specific page ID to start indexing

# OpenAI Configuration
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL_EMBEDDING=text-embedding-3-small
OPENAI_MODEL_CHAT=gpt-4-turbo-preview

# Vector Database Configuration
VECTOR_DB_TYPE=chroma  # Options: chroma, pinecone, qdrant
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Pinecone Configuration (Recommended for Railway deployment)
# PINECONE_API_KEY=pc-xxx  # Get from https://app.pinecone.io/
# PINECONE_INDEX_NAME=d1536  # Pinecone index name (default: d1536)
# VECTOR_DB_TYPE=pinecone  # Uncomment to use Pinecone

# Qdrant Configuration (Alternative managed option)
# QDRANT_URL=http://localhost:6333  # For self-hosted Qdrant
# QDRANT_API_KEY=xxx  # For Qdrant Cloud

# Server Configuration
PORT=5000
HOST=0.0.0.0
WORKERS=4
RELOAD=false  # Set to true for development

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY=your-api-key-for-external-access

# Database (for metadata storage)
DATABASE_URL=postgresql://user:password@localhost/notion2rag
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./notion2rag.db

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Chunking Configuration
CHUNK_SIZE=500  # tokens
CHUNK_OVERLAP=50  # tokens

# Query Configuration
MAX_SEARCH_RESULTS=5
TEMPERATURE=0.7
MAX_TOKENS=1500

# Refresh Configuration
AUTO_REFRESH_ENABLED=false
AUTO_REFRESH_INTERVAL=3600  # seconds (1 hour)

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090